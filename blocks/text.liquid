{% comment %}
  Text Block - Customizable text block with full styling control
{% endcomment %}

{%- liquid
  assign font_family = block.settings.font_family.family | default: 'inherit'
  assign font_size = block.settings.font_size | default: 16
  assign font_color = block.settings.font_color | default: '#000000'
  assign line_height = block.settings.line_height | default: 1.5
  assign letter_spacing = block.settings.letter_spacing | default: 0
  assign text_transform = block.settings.text_transform | default: 'none'
  assign font_style = block.settings.font_style | default: 'normal'
  assign font_weight = block.settings.font_weight | default: 'normal'
  
  assign padding_top = block.settings.padding_top | default: 0
  assign padding_bottom = block.settings.padding_bottom | default: 0
  assign padding_left = block.settings.padding_left | default: 0
  assign padding_right = block.settings.padding_right | default: 0
  
  assign margin_top = block.settings.margin_top | default: 0
  assign margin_bottom = block.settings.margin_bottom | default: 0
  assign margin_left = block.settings.margin_left | default: 0
  assign margin_right = block.settings.margin_right | default: 0
  
  assign text_align = block.settings.text_align | default: 'left'
  assign max_width = block.settings.max_width
  assign custom_width = block.settings.custom_width
  
  assign element_tag = block.settings.element_tag | default: 'p'
-%}

<style>
  .text-block-{{ block.id }} {
    font-family: {{ font_family }};
    font-size: {{ font_size }}px;
    color: {{ font_color }};
    line-height: {{ line_height }};
    letter-spacing: {{ letter_spacing }}px;
    text-transform: {{ text_transform }};
    font-style: {{ font_style }};
    font-weight: {{ font_weight }};
    
    padding: {{ padding_top }}px {{ padding_right }}px {{ padding_bottom }}px {{ padding_left }}px;
    margin: {{ margin_top }}px {{ margin_right }}px {{ margin_bottom }}px {{ margin_left }}px;
    
    text-align: {{ text_align }};
    
    {% if max_width != blank %}
      max-width: {{ max_width }}px;
    {% endif %}
    
    {% if custom_width != blank %}
      width: {{ custom_width }}%;
    {% endif %}
    
    {% if text_align == 'center' %}
      {% if max_width != blank or custom_width != blank %}
        margin-left: auto;
        margin-right: auto;
      {% endif %}
    {% endif %}
  }
  
  .text-block-container-{{ block.id }} {
    {% if block.settings.container_background_color != blank %}
      background-color: {{ block.settings.container_background_color }};
    {% endif %}
    
    {% if block.settings.container_border_radius != blank %}
      border-radius: {{ block.settings.container_border_radius }}px;
    {% endif %}
    
    {% if block.settings.container_padding_top != blank or block.settings.container_padding_bottom != blank or block.settings.container_padding_left != blank or block.settings.container_padding_right != blank %}
      padding: {{ block.settings.container_padding_top | default: 0 }}px {{ block.settings.container_padding_right | default: 0 }}px {{ block.settings.container_padding_bottom | default: 0 }}px {{ block.settings.container_padding_left | default: 0 }}px;
    {% endif %}
  }
</style>

<div class="text-block-container-{{ block.id }}">
  <{{ element_tag }} class="text-block-{{ block.id }}" {{ block.shopify_attributes }}>
    {{ block.settings.text | default: 'Add your text here...' }}
  </{{ element_tag }}>
</div>


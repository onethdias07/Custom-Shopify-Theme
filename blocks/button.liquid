{% comment %}
  Button Block - Customizable button with full styling control
{% endcomment %}

{%- liquid
  assign button_text = block.settings.button_text | default: 'Button Text'
  assign button_url = block.settings.button_link
  assign open_in_new_tab = block.settings.open_in_new_tab
  assign button_target = '_self'
  if open_in_new_tab
    assign button_target = '_blank'
  endif
  
  assign font_family = block.settings.font_family.family | default: 'inherit'
  assign font_size = block.settings.font_size | default: 16
  assign text_color = block.settings.text_color | default: '#ffffff'
  assign line_height = block.settings.line_height | default: 1.5
  assign letter_spacing = block.settings.letter_spacing | default: 0
  assign text_transform = block.settings.text_transform | default: 'none'
  assign font_style = block.settings.font_style | default: 'normal'
  assign font_weight = block.settings.font_weight | default: 'normal'
  
  assign background_color = block.settings.background_color | default: '#000000'
  assign border_radius = block.settings.border_radius | default: 0
  
  assign padding_top = block.settings.padding_top | default: 12
  assign padding_bottom = block.settings.padding_bottom | default: 12
  assign padding_left = block.settings.padding_left | default: 24
  assign padding_right = block.settings.padding_right | default: 24
  
  assign button_alignment = block.settings.button_alignment | default: 'left'
  assign button_width = block.settings.button_width | default: 'auto'
  assign custom_width = block.settings.custom_width | default: 200
-%}

<style>
  .button-container-{{ block.id }} {
    text-align: {{ button_alignment }};
    width: 100%;
  }
  
  .button-{{ block.id }} {
    font-family: {{ font_family }};
    font-size: {{ font_size }}px;
    color: {{ text_color }};
    line-height: {{ line_height }};
    letter-spacing: {{ letter_spacing }}px;
    text-transform: {{ text_transform }};
    font-style: {{ font_style }};
    font-weight: {{ font_weight }};
    
    background-color: {{ background_color }};
    border-radius: {{ border_radius }}px;
    
    padding: {{ padding_top }}px {{ padding_right }}px {{ padding_bottom }}px {{ padding_left }}px;
    
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: opacity 0.3s ease, transform 0.2s ease;
    
    {% if button_width == 'custom' %}
      width: {{ custom_width }}px;
    {% elsif button_width == 'full' %}
      width: 100%;
    {% else %}
      width: auto;
    {% endif %}
  }
  
  .button-{{ block.id }}:hover {
    opacity: 0.8;
    transform: translateY(-1px);
  }
  
  .button-{{ block.id }}:active {
    transform: translateY(0);
  }
</style>

<div class="button-container-{{ block.id }}">
  {% if button_url != blank %}
    <a href="{{ button_url }}" 
       class="button-{{ block.id }}" 
       target="{{ button_target }}"
       {{ block.shopify_attributes }}>
      {{ button_text }}
    </a>
  {% else %}
    <button class="button-{{ block.id }}" {{ block.shopify_attributes }}>
      {{ button_text }}
    </button>
  {% endif %}
</div>


{% comment %}
Article Template
Individual blog post page with enhanced features
{% endcomment %}

<article class="article-container" itemscope itemtype="http://schema.org/BlogPosting">
  <div class="article-hero">
    {% if article.image != blank %}
      <div class="article-hero-image">
        <img src="{{ article.image | img_url: '1200x600' }}" alt="{{ article.title }}" itemprop="image" loading="eager">
      </div>
    {% endif %}
    
    <div class="article-hero-content">
      <div class="container">
        <div class="article-breadcrumb">
          <a href="{{ routes.root_url }}">Home</a>
          <span class="breadcrumb-separator">•</span>
          <a href="{{ blog.url }}">{{ blog.title }}</a>
          <span class="breadcrumb-separator">•</span>
          <span>{{ article.title | truncatewords: 5 }}</span>
        </div>

        {% if article.tags.size > 0 %}
          <div class="article-category">
            <span class="category-tag">{{ article.tags.first }}</span>
          </div>
        {% endif %}

        <h1 class="article-title" itemprop="headline">{{ article.title }}</h1>

        <div class="article-meta">
          <div class="article-author" itemprop="author" itemscope itemtype="http://schema.org/Person">
            {% if article.author != blank %}
              <div class="author-avatar">
                <span>{{ article.author | slice: 0 }}</span>
              </div>
              <div class="author-info">
                <span class="author-name" itemprop="name">{{ article.author }}</span>
                <span class="author-label">Author</span>
              </div>
            {% endif %}
          </div>

          <div class="article-details">
            <time class="article-date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished">
              {{ article.published_at | date: '%B %d, %Y' }}
            </time>
            
            <span class="reading-time">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
              </svg>
              {{ article.content | strip_html | truncatewords: 200 | size | divided_by: 200 | at_least: 1 }} min read
            </span>

            {% if article.moderated? and article.comments_count > 0 %}
              <span class="comment-count">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" stroke="currentColor" stroke-width="2"/>
                </svg>
                {{ article.comments_count }} 
                {{ article.comments_count | pluralize: 'comment', 'comments' }}
              </span>
            {% endif %}
          </div>
        </div>

        {% comment %} Social Share Buttons {% endcomment %}
        <div class="article-share">
          <span class="share-label">Share:</span>
          <div class="share-buttons">
            <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ shop.url }}{{ article.url }}" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="share-btn share-twitter"
               aria-label="Share on Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
            
            <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="share-btn share-facebook"
               aria-label="Share on Facebook">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            
            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url }}{{ article.url }}" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="share-btn share-linkedin"
               aria-label="Share on LinkedIn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            </a>
            
            <button class="share-btn share-copy" id="copy-link" aria-label="Copy link">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" stroke="currentColor" stroke-width="2"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" stroke="currentColor" stroke-width="2"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="article-content">
    <div class="container">
      <div class="article-layout">
        <main class="article-main">
          <div class="article-body" itemprop="articleBody">
            {{ article.content }}
          </div>

          {% if article.tags.size > 1 %}
            <div class="article-tags">
              <h4>Tags:</h4>
              <div class="tag-list">
                {% for tag in article.tags %}
                  <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag-item">{{ tag }}</a>
                {% endfor %}
              </div>
            </div>
          {% endif %}

          {% comment %} Author Bio {% endcomment %}
          {% if article.author != blank %}
            <div class="author-bio">
              <div class="author-bio-avatar">
                <span>{{ article.author | slice: 0, 2 }}</span>
              </div>
              <div class="author-bio-content">
                <h4 class="author-bio-name">{{ article.author }}</h4>
                <p class="author-bio-description">
                  Content creator and writer passionate about sharing insights and stories that matter.
                </p>
                <div class="author-bio-stats">
                  {% assign author_posts = blog.articles | where: 'author', article.author %}
                  <span>{{ author_posts.size }} {{ author_posts.size | pluralize: 'post', 'posts' }}</span>
                </div>
              </div>
            </div>
          {% endif %}

          {% comment %} Navigation to Previous/Next Articles {% endcomment %}
          <nav class="article-navigation" aria-label="Article navigation">
            <div class="nav-links">
              {% if blog.previous_article %}
                <a href="{{ blog.previous_article.url }}" class="nav-link nav-prev">
                  <div class="nav-direction">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <polyline points="15,18 9,12 15,6" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    Previous
                  </div>
                  <div class="nav-info">
                    <span class="nav-title">{{ blog.previous_article.title | truncatewords: 6 }}</span>
                    <span class="nav-date">{{ blog.previous_article.published_at | date: '%B %d, %Y' }}</span>
                  </div>
                </a>
              {% endif %}

              {% if blog.next_article %}
                <a href="{{ blog.next_article.url }}" class="nav-link nav-next">
                  <div class="nav-info">
                    <span class="nav-title">{{ blog.next_article.title | truncatewords: 6 }}</span>
                    <span class="nav-date">{{ blog.next_article.published_at | date: '%B %d, %Y' }}</span>
                  </div>
                  <div class="nav-direction">
                    Next
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <polyline points="9,18 15,12 9,6" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  </div>
                </a>
              {% endif %}
            </div>
          </nav>

          {% comment %} Related Articles {% endcomment %}
          {% assign related_articles = blog.articles | where: 'tags', article.tags.first | where_not: 'id', article.id %}
          {% if related_articles.size > 0 %}
            <section class="related-articles">
              <h3>Related Articles</h3>
              <div class="related-grid">
                {% for related in related_articles limit: 3 %}
                  <article class="related-card">
                    {% if related.image != blank %}
                      <div class="related-image">
                        <a href="{{ related.url }}">
                          <img src="{{ related.image | img_url: '300x200' }}" alt="{{ related.title }}" loading="lazy">
                        </a>
                      </div>
                    {% endif %}
                    
                    <div class="related-content">
                      <h4 class="related-title">
                        <a href="{{ related.url }}">{{ related.title | truncatewords: 8 }}</a>
                      </h4>
                      <time class="related-date">{{ related.published_at | date: '%B %d, %Y' }}</time>
                    </div>
                  </article>
                {% endfor %}
              </div>
            </section>
          {% endif %}

          {% comment %} Comments Section {% endcomment %}
          {% if blog.moderated? and article.moderated? %}
            <section class="article-comments" id="comments">
              <h3>
                Comments 
                {% if article.comments_count > 0 %}
                  ({{ article.comments_count }})
                {% endif %}
              </h3>

              {% paginate article.comments by 5 %}
                {% if article.comments_count > 0 %}
                  <div class="comments-list">
                    {% for comment in article.comments %}
                      <div class="comment" id="comment-{{ comment.id }}">
                        <div class="comment-avatar">
                          <span>{{ comment.author | slice: 0 }}</span>
                        </div>
                        <div class="comment-content">
                          <div class="comment-header">
                            <span class="comment-author">{{ comment.author }}</span>
                            <time class="comment-date">{{ comment.created_at | date: '%B %d, %Y at %I:%M %p' }}</time>
                          </div>
                          <div class="comment-body">{{ comment.content }}</div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>

                  {% if paginate.pages > 1 %}
                    <nav class="comments-pagination">
                      {% if paginate.previous %}
                        <a href="{{ paginate.previous.url }}#comments" class="pagination-btn">Previous</a>
                      {% endif %}
                      {% if paginate.next %}
                        <a href="{{ paginate.next.url }}#comments" class="pagination-btn">Next</a>
                      {% endif %}
                    </nav>
                  {% endif %}
                {% endif %}
              {% endpaginate %}

              {% comment %} Comment Form {% endcomment %}
              {% form 'new_comment', article %}
                <div class="comment-form">
                  <h4>Leave a Comment</h4>
                  
                  {% if form.posted_successfully? %}
                    <div class="form-success">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" stroke="currentColor" stroke-width="2"/>
                        <polyline points="22,4 12,14.01 9,11.01" stroke="currentColor" stroke-width="2"/>
                      </svg>
                      {% if blog.moderated? %}
                        Your comment has been submitted and is awaiting approval.
                      {% else %}
                        Your comment has been posted successfully!
                      {% endif %}
                    </div>
                  {% endif %}

                  {% if form.errors %}
                    <div class="form-errors">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                        <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2"/>
                        <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2"/>
                      </svg>
                      {{ form.errors | default_errors }}
                    </div>
                  {% endif %}

                  <div class="form-fields">
                    <div class="field-row">
                      <div class="form-field">
                        <label for="comment-author">Name *</label>
                        <input type="text" 
                               id="comment-author" 
                               name="comment[author]" 
                               value="{{ form.author }}" 
                               required
                               placeholder="Your name">
                      </div>
                      
                      <div class="form-field">
                        <label for="comment-email">Email *</label>
                        <input type="email" 
                               id="comment-email" 
                               name="comment[email]" 
                               value="{{ form.email }}" 
                               required
                               placeholder="your@email.com">
                      </div>
                    </div>

                    <div class="form-field">
                      <label for="comment-url">Website (optional)</label>
                      <input type="url" 
                             id="comment-url" 
                             name="comment[url]" 
                             value="{{ form.url }}"
                             placeholder="https://yourwebsite.com">
                    </div>

                    <div class="form-field">
                      <label for="comment-body">Comment *</label>
                      <textarea id="comment-body" 
                                name="comment[body]" 
                                required
                                placeholder="Share your thoughts..."
                                rows="5">{{ form.body }}</textarea>
                    </div>

                    <button type="submit" class="submit-comment">
                      Post Comment
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line x1="22" y1="2" x2="11" y2="13" stroke="currentColor" stroke-width="2"/>
                        <polygon points="22,2 15,22 11,13 2,9 22,2" fill="currentColor"/>
                      </svg>
                    </button>
                  </div>
                </div>
              {% endform %}
            </section>
          {% endif %}
        </main>

        <aside class="article-sidebar">
          {% comment %} Table of Contents {% endcomment %}
          <div class="sidebar-widget toc-widget">
            <h4>Table of Contents</h4>
            <div class="table-of-contents" id="toc">
              <!-- Generated by JavaScript -->
            </div>
          </div>

          {% comment %} Share Sticky {% endcomment %}
          <div class="sidebar-widget share-widget">
            <h4>Share this post</h4>
            <div class="share-buttons-vertical">
              <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ shop.url }}{{ article.url }}" 
                 target="_blank" class="share-btn-vertical share-twitter">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                </svg>
              </a>
              <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" 
                 target="_blank" class="share-btn-vertical share-facebook">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
              <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url }}{{ article.url }}" 
                 target="_blank" class="share-btn-vertical share-linkedin">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                  <rect x="2" y="9" width="4" height="12"/>
                  <circle cx="4" cy="4" r="2"/>
                </svg>
              </a>
            </div>
          </div>

          {% comment %} Back to Blog {% endcomment %}
          <div class="sidebar-widget">
            <a href="{{ blog.url }}" class="back-to-blog">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <polyline points="15,18 9,12 15,6" stroke="currentColor" stroke-width="2"/>
              </svg>
              Back to {{ blog.title }}
            </a>
          </div>
        </aside>
      </div>
    </div>
  </div>

  {% comment %} Structured Data {% endcomment %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": {{ article.title | json }},
      "image": "{{ article.image | img_url: '1200x630' }}",
      "author": {
        "@type": "Person",
        "name": {{ article.author | json }}
      },
      "publisher": {
        "@type": "Organization",
        "name": {{ shop.name | json }},
        "logo": {
          "@type": "ImageObject",
          "url": "{{ 'logo.png' | asset_url }}"
        }
      },
      "datePublished": "{{ article.published_at | date: '%Y-%m-%d' }}",
      "dateModified": "{{ article.updated_at | date: '%Y-%m-%d' }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ shop.url }}{{ article.url }}"
      },
      "description": {{ article.excerpt | strip_html | truncatewords: 25 | json }}
    }
  </script>
</article>


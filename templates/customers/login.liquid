{% comment %}
Customer Login Page
{% endcomment %}

<div class="login-page-container">
  <div class="login-form-wrapper">
    <div class="login-header">
      <div class="brand-logo">
        {% if shop.brand.logo %}
          <img src="{{ shop.brand.logo | img_url: '60x' }}" alt="{{ shop.name }}" width="60" height="60">
        {% else %}
          <h2>{{ shop.name }}</h2>
        {% endif %}
      </div>
      <h1 class="login-title">Sign In</h1>
      <p class="login-subtitle">Enter your email and we'll send you a verification code</p>
    </div>

    {% comment %} Always use Shopify's form for login {% endcomment %}
    {% form 'customer_login', class: 'login-form' %}
      {% if form.errors %}
        <div class="form-errors">
          <div class="error-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <line x1="15" y1="9" x2="9" y2="15" stroke="currentColor" stroke-width="2"/>
              <line x1="9" y1="9" x2="15" y2="15" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <div class="error-content">
            <h3>Please correct the following:</h3>
            <ul>
              {% for error in form.errors %}
                <li>{{ error | first | capitalize }} {{ error | last }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      {% endif %}

      <div class="form-group">
        <label for="customer-email" class="form-label">
          Email
        </label>
        <div class="input-wrapper">
          <input 
            type="email" 
            id="customer-email" 
            name="customer[email]"
            class="form-input"
            placeholder="Enter your email address"
            value="{{ form.email }}"
            required
            autocomplete="email"
          >
          <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2"/>
            <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
          </svg>
        </div>
      </div>



      <div class="form-actions">
        <button type="submit" class="login-btn">
          <span class="btn-text">Continue</span>
          <span class="btn-loading" style="display: none;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416" repeatCount="indefinite"/>
                <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416" repeatCount="indefinite"/>
              </animate>
            </svg>
            Sending...
          </span>
        </button>
      </div>

      <div class="form-links">
        <a href="{{ routes.recover_password_url }}" class="forgot-password-link">
          Forgot your password?
        </a>
      </div>
    {% endform %}

    <div class="login-divider">
      <span>or</span>
    </div>

    <div class="register-section">
      <div class="register-content">
        <svg class="register-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
          <circle cx="8.5" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
          <line x1="20" y1="8" x2="20" y2="14" stroke="currentColor" stroke-width="2"/>
          <line x1="23" y1="11" x2="17" y2="11" stroke="currentColor" stroke-width="2"/>
        </svg>
        <div class="register-text">
          <h3>New to our store?</h3>
          <p>Create an account for faster checkout, order tracking, and exclusive offers.</p>
        </div>
      </div>
      <a href="{{ routes.account_register_url }}" class="register-btn">
        <span>Create Account</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="5" y1="12" x2="19" y2="12" stroke="currentColor" stroke-width="2"/>
          <polyline points="12,5 19,12 12,19" stroke="currentColor" stroke-width="2"/>
        </svg>
      </a>
    </div>

    {% comment %} Guest Checkout Option {% endcomment %}
    <div class="guest-checkout">
      <h3>Continue as Guest</h3>
      <p>You can checkout without creating an account.</p>
      <a href="{{ routes.cart_url }}" class="guest-btn">
        Continue to Cart
      </a>
    </div>

    <div class="login-footer">
      <p class="privacy-text">
        By continuing, you agree to our 
        <a href="{{ pages.privacy-policy.url | default: '/pages/privacy-policy' }}" class="privacy-link">Privacy Policy</a>
        {% if pages.terms-of-service.url %}
          and <a href="{{ pages.terms-of-service.url }}" class="privacy-link">Terms of Service</a>
        {% endif %}
      </p>
    </div>
  </div>
</div>

<style>
  .login-page-container {
    max-width: 480px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .login-form-wrapper {
    background: var(--color-background-secondary);
    border-radius: 12px;
    padding: 40px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .login-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .brand-logo {
    margin-bottom: 20px;
  }

  .brand-logo img {
    border-radius: 8px;
  }

  .brand-logo h2 {
    color: var(--color-primary);
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .login-title {
    font-size: 2rem;
    color: var(--color-primary);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .login-subtitle {
    color: var(--color-secondary);
    font-size: 1rem;
    margin: 0;
    line-height: 1.4;
  }

  .form-errors {
    display: flex;
    gap: 12px;
    padding: 16px;
    background: #fdf2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    margin-bottom: 24px;
  }

  .error-icon {
    color: var(--color-error);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .error-content h3 {
    color: var(--color-error);
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }

  .error-content ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-content li {
    color: var(--color-error);
    font-size: 14px;
    margin-bottom: 4px;
  }

  .form-group {
    margin-bottom: 24px;
  }

  .form-label {
    display: block;
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: 8px;
    font-size: 14px;
  }

  .required {
    color: var(--color-error);
  }

  .input-wrapper {
    position: relative;
  }

  .form-input {
    width: 100%;
    padding: 12px 16px 12px 48px;
    border: 2px solid #e8e8e8;
    border-radius: var(--button-border-radius);
    font-size: 16px;
    background: white;
    transition: border-color var(--animation-speed) ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-secondary);
    pointer-events: none;
  }

  .password-input-wrapper {
    position: relative;
  }

  .password-toggle {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--color-secondary);
    cursor: pointer;
    padding: 4px;
  }

  .password-toggle:hover {
    color: var(--color-primary);
  }

  .form-actions {
    margin-bottom: 24px;
  }

  .login-btn {
    width: 100%;
    padding: 14px 24px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--button-border-radius);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--animation-speed) ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .login-btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .login-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .form-links {
    text-align: center;
  }

  .forgot-password-link {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .forgot-password-link:hover {
    text-decoration: underline;
  }

  .login-divider {
    text-align: center;
    margin: 32px 0;
    position: relative;
  }

  .login-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #e8e8e8;
  }

  .login-divider span {
    background: var(--color-background-secondary);
    color: var(--color-secondary);
    padding: 0 16px;
    font-size: 14px;
  }

  .register-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
    transition: all var(--animation-speed) ease;
  }

  .register-section:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }

  .register-content {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 20px;
  }

  .register-icon {
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 4px;
  }

  .register-text {
    text-align: left;
  }

  .register-section h3 {
    color: var(--color-primary);
    font-size: 1.1rem;
    margin: 0 0 8px 0;
    font-weight: 600;
  }

  .register-section p {
    color: var(--color-secondary);
    font-size: 14px;
    margin: 0;
    line-height: 1.4;
  }

  .register-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--color-primary);
    color: white;
    border: 2px solid var(--color-primary);
    border-radius: var(--button-border-radius);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--animation-speed) ease;
    width: 100%;
    justify-content: center;
  }

  .register-btn:hover {
    background: transparent;
    color: var(--color-primary);
    text-decoration: none;
    transform: translateY(-1px);
  }

  .guest-checkout {
    text-align: center;
    margin-bottom: 24px;
    padding: 20px;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    background: #f8f9fa;
  }

  .guest-checkout h3 {
    color: var(--color-primary);
    font-size: 1rem;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .guest-checkout p {
    color: var(--color-secondary);
    font-size: 14px;
    margin-bottom: 16px;
  }

  .guest-btn {
    display: inline-block;
    padding: 10px 24px;
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    border-radius: var(--button-border-radius);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--animation-speed) ease;
  }

  .guest-btn:hover {
    background: var(--color-primary);
    color: white;
    text-decoration: none;
  }

  .login-footer {
    text-align: center;
    margin-top: 24px;
    padding-top: 20px;
    border-top: 1px solid #e8e8e8;
  }

  .privacy-text {
    font-size: 12px;
    color: var(--color-secondary);
    margin: 0;
    line-height: 1.4;
  }

  .privacy-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .privacy-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-page-container {
      padding: 40px 16px;
    }

    .login-form-wrapper {
      padding: 24px;
    }

    .login-title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Password toggle functionality
    const passwordToggle = document.querySelector('.password-toggle');
    const passwordInput = document.getElementById('customer-password');
    const showIcon = document.querySelector('.password-show');
    const hideIcon = document.querySelector('.password-hide');

    if (passwordToggle && passwordInput) {
      passwordToggle.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        
        if (type === 'text') {
          showIcon.style.display = 'none';
          hideIcon.style.display = 'block';
        } else {
          showIcon.style.display = 'block';
          hideIcon.style.display = 'none';
        }
      });
    }

    // Form submission with loading state
    const loginForm = document.querySelector('.login-form');
    const loginBtn = document.querySelector('.login-btn');
    const btnText = document.querySelector('.btn-text');
    const btnLoading = document.querySelector('.btn-loading');

    if (loginForm && loginBtn) {
      loginForm.addEventListener('submit', function() {
        loginBtn.disabled = true;
        btnText.style.display = 'none';
        btnLoading.style.display = 'flex';
      });
    }
  });
</script>
{% comment %}
Customer Account Dashboard
{% endcomment %}

<div class="account-page-container">
  <div class="account-header">
    <h1 class="account-title">My Account</h1>
    <p class="account-welcome">Welcome back, {{ customer.first_name }}!</p>
  </div>

  <div class="account-content">
    <!-- Account Navigation -->
    <div class="account-sidebar">
      <div class="account-nav">
        <a href="#account-overview" class="nav-item active" data-tab="overview">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="2"/>
            <polyline points="9,22 9,12 15,12 15,22" stroke="currentColor" stroke-width="2"/>
          </svg>
          Overview
        </a>
        
        <a href="#account-orders" class="nav-item" data-tab="orders">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
            <line x1="9" y1="9" x2="15" y2="9" stroke="currentColor" stroke-width="2"/>
            <line x1="9" y1="15" x2="15" y2="15" stroke="currentColor" stroke-width="2"/>
          </svg>
          Orders
        </a>
        
        <a href="#account-addresses" class="nav-item" data-tab="addresses">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
          </svg>
          Addresses
        </a>
        
        <a href="#account-profile" class="nav-item" data-tab="profile">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
          </svg>
          Profile
        </a>
        
        <a href="{{ routes.account_logout_url }}" class="nav-item logout">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke="currentColor" stroke-width="2"/>
            <polyline points="16,17 21,12 16,7" stroke="currentColor" stroke-width="2"/>
            <line x1="21" y1="12" x2="9" y2="12" stroke="currentColor" stroke-width="2"/>
          </svg>
          Sign Out
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <div class="account-main">
      
      <!-- Overview Tab -->
      <div id="account-overview" class="tab-content active">
        <div class="overview-grid">
          
          <!-- Account Summary -->
          <div class="summary-card">
            <div class="card-header">
              <h2>Account Summary</h2>
            </div>
            <div class="card-content">
              <div class="summary-item">
                <span class="summary-label">Total Orders:</span>
                <span class="summary-value">{{ customer.orders_count | default: 0 }}</span>
              </div>
              <div class="summary-item">
                <span class="summary-label">Member Since:</span>
                <span class="summary-value">{{ customer.created_at | date: "%B %Y" }}</span>
              </div>
              <div class="summary-item">
                <span class="summary-label">Account Status:</span>
                <span class="summary-value status-active">Active</span>
              </div>
            </div>
          </div>

          <!-- Recent Orders -->
          <div class="recent-orders-card">
            <div class="card-header">
              <h2>Recent Orders</h2>
              {% if customer.orders_count > 0 %}
                <a href="#account-orders" class="view-all-btn" data-tab-trigger="orders">View All</a>
              {% endif %}
            </div>
            <div class="card-content">
              {% if customer.orders_count > 0 %}
                {% for order in customer.orders limit: 3 %}
                  <div class="order-item">
                    <div class="order-info">
                      <div class="order-number">Order #{{ order.name }}</div>
                      <div class="order-date">{{ order.created_at | date: "%B %d, %Y" }}</div>
                    </div>
                    <div class="order-status">
                      <span class="status-badge status-{{ order.fulfillment_status | default: 'pending' }}">
                        {{ order.fulfillment_status | default: 'Pending' | capitalize }}
                      </span>
                    </div>
                    <div class="order-total">{{ order.total_price | money }}</div>
                  </div>
                {% endfor %}
              {% else %}
                <div class="empty-state">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="9" cy="21" r="1" stroke="currentColor" stroke-width="2"/>
                    <circle cx="20" cy="21" r="1" stroke="currentColor" stroke-width="2"/>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <p>You haven't placed any orders yet.</p>
                  <a href="{{ routes.all_products_collection_url }}" class="shop-now-btn">Start Shopping</a>
                </div>
              {% endif %}
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="quick-actions-card">
            <div class="card-header">
              <h2>Quick Actions</h2>
            </div>
            <div class="card-content">
              <div class="quick-actions-grid">
                <a href="{{ routes.all_products_collection_url }}" class="quick-action">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="3" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
                    <rect x="14" y="3" width="7" height="7" stroke="currentColor" stroke-width="2"/>
                    <rect x="14" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>
                    <rect x="3" y="14" width="7" height="7" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Browse Products
                </a>
                
                <a href="#account-addresses" class="quick-action" data-tab-trigger="addresses">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                    <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Manage Addresses
                </a>
                
                <a href="#account-profile" class="quick-action" data-tab-trigger="profile">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
                    <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Edit Profile
                </a>
                
                <a href="/pages/contact" class="quick-action">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2"/>
                    <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Contact Support
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Orders Tab -->
      <div id="account-orders" class="tab-content">
        <div class="tab-header">
          <h2>Order History</h2>
        </div>
        
        {% if customer.orders_count > 0 %}
          <div class="orders-list">
            {% paginate customer.orders by 10 %}
              {% for order in customer.orders %}
                <div class="order-card">
                  <div class="order-header">
                    <div class="order-details">
                      <h3>Order #{{ order.name }}</h3>
                      <p class="order-date">Placed on {{ order.created_at | date: "%B %d, %Y" }}</p>
                    </div>
                    <div class="order-status-price">
                      <span class="status-badge status-{{ order.fulfillment_status | default: 'pending' }}">
                        {{ order.fulfillment_status | default: 'Pending' | capitalize }}
                      </span>
                      <span class="order-total">{{ order.total_price | money }}</span>
                    </div>
                  </div>
                  
                  <div class="order-items">
                    {% for line_item in order.line_items limit: 3 %}
                      <div class="order-item">
                        {% if line_item.image %}
                          <img src="{{ line_item.image | img_url: '60x60' }}" alt="{{ line_item.title }}">
                        {% else %}
                          <div class="item-placeholder">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                              <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                              <polyline points="21,15 16,10 5,21" stroke="currentColor" stroke-width="2"/>
                            </svg>
                          </div>
                        {% endif %}
                        <div class="item-details">
                          <div class="item-title">{{ line_item.title }}</div>
                          <div class="item-variant">
                            {% unless line_item.variant_title contains 'Default' %}
                              {{ line_item.variant_title }}
                            {% endunless %}
                          </div>
                          <div class="item-quantity">Qty: {{ line_item.quantity }}</div>
                        </div>
                        <div class="item-price">{{ line_item.final_price | money }}</div>
                      </div>
                    {% endfor %}
                    
                    {% if order.line_items.size > 3 %}
                      <div class="more-items">
                        +{{ order.line_items.size | minus: 3 }} more items
                      </div>
                    {% endif %}
                  </div>
                  
                  <div class="order-actions">
                    <a href="{{ order.customer_url }}" class="btn-secondary">View Details</a>
                    {% if order.fulfillment_status == 'fulfilled' %}
                      <button class="btn-primary reorder-btn" data-order-id="{{ order.id }}">Reorder</button>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
              
              {% if paginate.pages > 1 %}
                <div class="pagination-wrapper">
                  {{ paginate | default_pagination }}
                </div>
              {% endif %}
            {% endpaginate %}
          </div>
        {% else %}
          <div class="empty-state large">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="9" cy="21" r="1" stroke="currentColor" stroke-width="2"/>
              <circle cx="20" cy="21" r="1" stroke="currentColor" stroke-width="2"/>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" stroke="currentColor" stroke-width="2"/>
            </svg>
            <h3>No Orders Yet</h3>
            <p>You haven't placed any orders with us yet. Ready to start shopping?</p>
            <a href="{{ routes.all_products_collection_url }}" class="btn-primary">Browse Products</a>
          </div>
        {% endif %}
      </div>

      <!-- Addresses Tab -->
      <div id="account-addresses" class="tab-content">
        <div class="tab-header">
          <h2>Saved Addresses</h2>
          <button class="btn-primary" id="add-address-btn">Add New Address</button>
        </div>
        
        <div class="addresses-grid">
          {% if customer.default_address %}
            <div class="address-card default">
              <div class="address-header">
                <span class="default-badge">Default</span>
                <div class="address-actions">
                  <button class="edit-address-btn" data-address-id="{{ customer.default_address.id }}">Edit</button>
                </div>
              </div>
              <div class="address-content">
                <div class="address-name">{{ customer.default_address.first_name }} {{ customer.default_address.last_name }}</div>
                <div class="address-details">
                  {{ customer.default_address.address1 }}
                  {% if customer.default_address.address2 != blank %}
                    <br>{{ customer.default_address.address2 }}
                  {% endif %}
                  <br>{{ customer.default_address.city }}, {{ customer.default_address.province }} {{ customer.default_address.zip }}
                  <br>{{ customer.default_address.country }}
                </div>
                {% if customer.default_address.phone != blank %}
                  <div class="address-phone">{{ customer.default_address.phone }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
          
          {% for address in customer.addresses %}
            {% unless address == customer.default_address %}
              <div class="address-card">
                <div class="address-header">
                  <div class="address-actions">
                    <button class="edit-address-btn" data-address-id="{{ address.id }}">Edit</button>
                    <button class="delete-address-btn" data-address-id="{{ address.id }}">Delete</button>
                  </div>
                </div>
                <div class="address-content">
                  <div class="address-name">{{ address.first_name }} {{ address.last_name }}</div>
                  <div class="address-details">
                    {{ address.address1 }}
                    {% if address.address2 != blank %}
                      <br>{{ address.address2 }}
                    {% endif %}
                    <br>{{ address.city }}, {{ address.province }} {{ address.zip }}
                    <br>{{ address.country }}
                  </div>
                  {% if address.phone != blank %}
                    <div class="address-phone">{{ address.phone }}</div>
                  {% endif %}
                </div>
              </div>
            {% endunless %}
          {% endfor %}
          
          {% if customer.addresses_count == 0 %}
            <div class="empty-addresses">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
              </svg>
              <p>No saved addresses yet.</p>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Profile Tab -->
      <div id="account-profile" class="tab-content">
        <div class="tab-header">
          <h2>Profile Settings</h2>
        </div>
        
        {% form 'customer' %}
          {% if form.errors %}
            <div class="form-errors">
              <ul>
                {% for error in form.errors %}
                  <li>{{ error | first | capitalize }} {{ error | last }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          
          <div class="profile-form">
            <div class="form-row">
              <div class="form-group">
                <label for="customer-first-name">First Name</label>
                <input type="text" id="customer-first-name" name="customer[first_name]" value="{{ customer.first_name }}" class="form-input">
              </div>
              
              <div class="form-group">
                <label for="customer-last-name">Last Name</label>
                <input type="text" id="customer-last-name" name="customer[last_name]" value="{{ customer.last_name }}" class="form-input">
              </div>
            </div>
            
            <div class="form-group">
              <label for="customer-email">Email Address</label>
              <input type="email" id="customer-email" name="customer[email]" value="{{ customer.email }}" class="form-input">
            </div>
            
            <div class="form-group">
              <label class="checkbox-wrapper">
                <input type="checkbox" name="customer[accepts_marketing]" {% if customer.accepts_marketing %}checked{% endif %}>
                <span class="checkmark"></span>
                I'd like to receive emails about new products and exclusive offers
              </label>
            </div>
            
            <div class="form-actions">
              <button type="submit" class="btn-primary">Update Profile</button>
            </div>
          </div>
        {% endform %}
        
        <!-- Password Change Section -->
        <div class="password-section">
          <h3>Change Password</h3>
          <p class="section-description">Update your password to keep your account secure.</p>
          
          <button class="btn-secondary" id="change-password-btn">Change Password</button>
          
          <!-- Password change form (hidden by default) -->
          <div id="password-form" class="password-form" style="display: none;">
            <form>
              <div class="form-group">
                <label for="current-password">Current Password</label>
                <input type="password" id="current-password" class="form-input" required>
              </div>
              
              <div class="form-group">
                <label for="new-password">New Password</label>
                <input type="password" id="new-password" class="form-input" required>
              </div>
              
              <div class="form-group">
                <label for="confirm-password">Confirm New Password</label>
                <input type="password" id="confirm-password" class="form-input" required>
              </div>
              
              <div class="form-actions">
                <button type="submit" class="btn-primary">Update Password</button>
                <button type="button" class="btn-secondary" id="cancel-password">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .account-page-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: var(--section-vertical-spacing) 40px;
  }

  .account-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .account-title {
    font-size: 2.5rem;
    color: var(--color-primary);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .account-welcome {
    color: var(--color-secondary);
    font-size: 1.1rem;
    margin: 0;
  }

  .account-content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* Sidebar Navigation */
  .account-sidebar {
    position: sticky;
    top: 20px;
  }

  .account-nav {
    background: var(--color-background-secondary);
    border-radius: 12px;
    padding: 8px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.1);
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: var(--color-secondary);
    text-decoration: none;
    border-radius: 8px;
    transition: all var(--animation-speed) ease;
    margin-bottom: 4px;
    font-weight: 500;
  }

  .nav-item:hover,
  .nav-item.active {
    background: var(--color-primary);
    color: white;
    text-decoration: none;
  }

  .nav-item.logout {
    margin-top: 16px;
    border-top: 1px solid #e8e8e8;
    padding-top: 16px;
  }

  .nav-item.logout:hover {
    background: var(--color-error);
  }

  /* Tab Content */
  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .tab-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .tab-header h2 {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin: 0;
  }

  /* Overview Grid */
  .overview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .summary-card,
  .recent-orders-card,
  .quick-actions-card {
    background: var(--color-background-secondary);
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    overflow: hidden;
  }

  .card-header {
    padding: 20px 24px;
    border-bottom: 1px solid #e8e8e8;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-header h2 {
    font-size: 1.1rem;
    color: var(--color-primary);
    margin: 0;
    font-weight: 600;
  }

  .view-all-btn {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .card-content {
    padding: 24px;
  }

  /* Summary Items */
  .summary-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .summary-item:last-child {
    border-bottom: none;
  }

  .summary-label {
    color: var(--color-secondary);
  }

  .summary-value {
    font-weight: 600;
    color: var(--color-primary);
  }

  .status-active {
    color: var(--color-success) !important;
  }

  /* Order Items */
  .order-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .order-item:last-child {
    border-bottom: none;
  }

  .order-number {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 14px;
  }

  .order-date {
    color: var(--color-secondary);
    font-size: 12px;
    margin: 4px 0 0 0;
  }

  .status-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
  }

  .status-pending {
    background: #fef3c7;
    color: #92400e;
  }

  .status-fulfilled {
    background: #d1fae5;
    color: #065f46;
  }

  .status-shipped {
    background: #dbeafe;
    color: #1e40af;
  }

  .order-total {
    font-weight: 600;
    color: var(--color-primary);
  }

  /* Quick Actions */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .quick-action {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-secondary);
    transition: all var(--animation-speed) ease;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
  }

  .quick-action:hover {
    background: var(--color-primary);
    color: white;
    text-decoration: none;
    transform: translateY(-2px);
  }

  /* Empty States */
  .empty-state {
    text-align: center;
    padding: 40px 20px;
    color: var(--color-secondary);
  }

  .empty-state.large {
    padding: 60px 20px;
  }

  .empty-state svg {
    margin-bottom: 16px;
    opacity: 0.6;
  }

  .empty-state h3 {
    color: var(--color-primary);
    margin-bottom: 8px;
  }

  .empty-state p {
    margin-bottom: 20px;
  }

  .shop-now-btn,
  .btn-primary,
  .btn-secondary {
    display: inline-block;
    padding: 10px 20px;
    border-radius: var(--button-border-radius);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--animation-speed) ease;
    border: 2px solid;
    cursor: pointer;
    font-size: 14px;
  }

  .shop-now-btn,
  .btn-primary {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .shop-now-btn:hover,
  .btn-primary:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  .btn-secondary:hover {

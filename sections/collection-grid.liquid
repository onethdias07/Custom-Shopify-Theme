{% comment %}
  Collection Grid Section
  Displays a grid of collections with images and links
{% endcomment %}

<section class="collection-grid section"
         style="padding-top: {{ section.settings.section_padding_top }}px; 
                padding-bottom: {{ section.settings.section_padding_bottom }}px;
                background-color: {{ section.settings.section_bg_color }};">
  <div class="container">
    <div class="collection-grid__wrapper">
      
      <!-- Section Header -->
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="collection-grid__header" style="margin-bottom: {{ section.settings.header_spacing }}px;">
          {% if section.settings.eyebrow_text != blank %}
            <span class="collection-grid__eyebrow" 
                  style="color: {{ section.settings.eyebrow_color }};">
              {{ section.settings.eyebrow_text }}
            </span>
          {% endif %}
          
          {% if section.settings.heading != blank %}
            <h2 class="collection-grid__heading" 
                style="color: {{ section.settings.heading_color }};">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          
          {% if section.settings.subheading != blank %}
            <p class="collection-grid__subheading" 
               style="color: {{ section.settings.subheading_color }};">
              {{ section.settings.subheading }}
            </p>
          {% endif %}
        </div>
      {% endif %}
      
      <!-- Collection Grid -->
      {% if section.blocks.size > 0 %}
        <div class="collection-grid__grid" 
             style="grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
                    gap: {{ section.settings.grid_gap }}px;">
          {% for block in section.blocks %}
            {% assign collection = collections[block.settings.collection] %}
            
            <div class="collection-grid__item" {{ block.shopify_attributes }}
                 style="border-radius: {{ section.settings.card_border_radius }}px;
                        {% if section.settings.card_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.1);{% endif %}
                        {% if section.settings.card_border %}border: 1px solid {{ section.settings.card_border_color }};{% endif %}">
              
              <a href="{{ collection.url | default: '#' }}" class="collection-grid__link">
                <!-- Collection Image -->
                <div class="collection-grid__image">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url: width: 600 }}" 
                         alt="{{ block.settings.image.alt | default: collection.title }}"
                         style="border-radius: {{ section.settings.image_border_radius }}px;">
                  {% elsif collection.featured_image %}
                    <img src="{{ collection.featured_image | image_url: width: 600 }}" 
                         alt="{{ collection.featured_image.alt | default: collection.title }}"
                         style="border-radius: {{ section.settings.image_border_radius }}px;">
                  {% else %}
                    <div class="collection-grid__placeholder"
                         style="border-radius: {{ section.settings.image_border_radius }}px;">
                      <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                        <path d="M19 7H5c-1.1 0-2 .9-2 2v6c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2zM5 15V9h14v6H5z" fill="currentColor"/>
                      </svg>
                    </div>
                  {% endif %}
                  
                  {% if section.settings.show_overlay %}
                    <div class="collection-grid__overlay"
                         style="background-color: {{ section.settings.overlay_color }};
                                opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
                  {% endif %}
                </div>
                
                <!-- Collection Info -->
                <div class="collection-grid__content"
                     style="padding: {{ section.settings.card_padding_top }}px {{ section.settings.card_padding_horizontal }}px {{ section.settings.card_padding_bottom }}px {{ section.settings.card_padding_horizontal }}px;">
                  
                  <h3 class="collection-grid__title" 
                      style="color: {{ section.settings.title_color }};">
                    {% if block.settings.custom_title != blank %}
                      {{ block.settings.custom_title }}
                    {% else %}
                      {{ collection.title | default: 'Collection' }}
                    {% endif %}
                  </h3>
                  
                  {% if section.settings.show_description and collection.description != blank %}
                    <p class="collection-grid__description" 
                       style="color: {{ section.settings.description_color }};">
                      {{ collection.description | truncate: 120 }}
                    </p>
                  {% endif %}
                  
                  {% if section.settings.show_product_count and collection.products_count %}
                    <span class="collection-grid__count" 
                          style="color: {{ section.settings.count_color }};">
                      {{ collection.products_count }} 
                      {% if collection.products_count == 1 %}
                        product
                      {% else %}
                        products
                      {% endif %}
                    </span>
                  {% endif %}
                  
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

<style>
  .collection-grid__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .collection-grid__header {
    text-align: center;
  }
  
  .collection-grid__eyebrow {
    display: block;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  
  .collection-grid__heading {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }
  
  .collection-grid__subheading {
    font-size: 1.1rem;
    line-height: 1.5;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .collection-grid__grid {
    display: grid;
  }
  
  .collection-grid__item {
    position: relative;
    background: white;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .collection-grid__item:hover {
    transform: translateY(-4px);
  }
  
  .collection-grid__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .collection-grid__image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }
  
  .collection-grid__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .collection-grid__item:hover .collection-grid__image img {
    transform: scale(1.05);
  }
  
  .collection-grid__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    color: #999;
  }
  
  .collection-grid__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }
  
  .collection-grid__title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 8px;
  }
  
  .collection-grid__description {
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 8px;
  }
  
  .collection-grid__count {
    font-size: 0.85rem;
    font-weight: 500;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .collection-grid__grid {
      grid-template-columns: repeat(2, 1fr) !important;
    }
    
    .collection-grid__heading {
      font-size: 2rem;
    }
    
    .collection-grid__wrapper {
      padding: 0 16px;
    }
  }
  
  @media (max-width: 480px) {
    .collection-grid__grid {
      grid-template-columns: 1fr !important;
    }
  }
</style>


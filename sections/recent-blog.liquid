{% comment %}
  Recent Blog Posts Section
  Displays latest blog articles with featured images
{% endcomment %}

<section class="recent-blog section"
         style="padding-top: {{ section.settings.section_padding_top }}px; 
                padding-bottom: {{ section.settings.section_padding_bottom }}px;
                background-color: {{ section.settings.section_bg_color }};">
  <div class="container">
    <div class="recent-blog__wrapper">
      
      <!-- Section Header -->
      <div class="recent-blog__header" style="margin-bottom: {{ section.settings.header_spacing }}px;">
        {% if section.settings.eyebrow_text != blank %}
          <span class="recent-blog__eyebrow" 
                style="color: {{ section.settings.eyebrow_color }};">
            {{ section.settings.eyebrow_text }}
          </span>
        {% endif %}
        
        {% if section.settings.heading != blank %}
          <h2 class="recent-blog__heading" 
              style="color: {{ section.settings.heading_color }};">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        
        {% if section.settings.subheading != blank %}
          <p class="recent-blog__subheading" 
             style="color: {{ section.settings.subheading_color }};">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
      
      <!-- Blog Posts Grid -->
      {% if section.settings.blog != blank %}
        {% assign blog_articles = blogs[section.settings.blog].articles %}
        {% assign articles_to_show = section.settings.articles_to_show | default: 3 %}
        
        {% if blog_articles.size > 0 %}
          <div class="recent-blog__grid" 
               style="grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
                      gap: {{ section.settings.grid_gap }}px;">
            {% for article in blog_articles limit: articles_to_show %}
              <article class="blog-card"
                       style="border-radius: {{ section.settings.card_border_radius }}px;
                              background-color: {{ section.settings.card_bg_color }};
                              {% if section.settings.card_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.1);{% endif %}
                              {% if section.settings.card_border %}border: 1px solid {{ section.settings.card_border_color }};{% endif %}">
                
                <a href="{{ article.url }}" class="blog-card__link">
                  <!-- Article Image -->
                  {% if section.settings.show_image %}
                    <div class="blog-card__image">
                      {% if article.image %}
                        <img src="{{ article.image | image_url: width: 600 }}" 
                             alt="{{ article.image.alt | default: article.title }}"
                             style="border-radius: {{ section.settings.image_border_radius }}px;">
                      {% else %}
                        <div class="blog-card__placeholder"
                             style="border-radius: {{ section.settings.image_border_radius }}px;">
                          <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                            <path d="M19 3H5C3.89543 3 3 3.89543 3 5V19C3 20.1046 3.89543 21 5 21H19C20.1046 21 21 20.1046 21 19V5C21 3.89543 20.1046 3 19 3Z" stroke="currentColor" stroke-width="2"/>
                            <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor"/>
                            <path d="M21 15L16 10L5 21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  <!-- Article Content -->
                  <div class="blog-card__content"
                       style="padding: {{ section.settings.card_padding_top }}px {{ section.settings.card_padding_horizontal }}px {{ section.settings.card_padding_bottom }}px {{ section.settings.card_padding_horizontal }}px;">
                    
                    <!-- Article Meta -->
                    {% if section.settings.show_date or section.settings.show_author %}
                      <div class="blog-card__meta">
                        {% if section.settings.show_date %}
                          <time class="blog-card__date" 
                                datetime="{{ article.published_at | date: '%Y-%m-%d' }}"
                                style="color: {{ section.settings.meta_color }};">
                            {{ article.published_at | date: format: 'abbreviated_date' }}
                          </time>
                        {% endif %}
                        
                        {% if section.settings.show_author and article.author != blank %}
                          <span class="blog-card__author" 
                                style="color: {{ section.settings.meta_color }};">
                            by {{ article.author }}
                          </span>
                        {% endif %}
                      </div>
                    {% endif %}
                    
                    <!-- Article Title -->
                    <h3 class="blog-card__title" 
                        style="color: {{ section.settings.title_color }};">
                      {{ article.title }}
                    </h3>
                    
                    <!-- Article Excerpt -->
                    {% if section.settings.show_excerpt %}
                      <p class="blog-card__excerpt" 
                         style="color: {{ section.settings.excerpt_color }};">
                        {% if article.excerpt != blank %}
                          {{ article.excerpt | strip_html | truncate: section.settings.excerpt_length }}
                        {% else %}
                          {{ article.content | strip_html | truncate: section.settings.excerpt_length }}
                        {% endif %}
                      </p>
                    {% endif %}
                    
                    <!-- Read More Link -->
                    {% if section.settings.show_read_more %}
                      <div class="blog-card__read-more">
                        <span style="color: {{ section.settings.link_color }};">
                          {{ section.settings.read_more_text | default: 'Read More' }}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" style="margin-left: 8px; vertical-align: middle;">
                            <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </div>
                    {% endif %}
                    
                  </div>
                </a>
              </article>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
      
      <!-- View All Button -->
      {% if section.settings.show_view_all and section.settings.view_all_text != blank and section.settings.blog != blank %}
        <div class="recent-blog__actions">
          <a href="{{ blogs[section.settings.blog].url }}" 
             class="btn btn--secondary"
             style="color: {{ section.settings.button_text_color }};
                    border-color: {{ section.settings.button_border_color }};
                    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
                    border-radius: {{ section.settings.button_border_radius }}px;">
            {{ section.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

<style>
  .recent-blog__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .recent-blog__header {
    text-align: center;
  }
  
  .recent-blog__eyebrow {
    display: block;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  
  .recent-blog__heading {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }
  
  .recent-blog__subheading {
    font-size: 1.1rem;
    line-height: 1.5;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .recent-blog__grid {
    display: grid;
    margin-bottom: 40px;
  }
  
  .blog-card {
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .blog-card:hover {
    transform: translateY(-4px);
  }
  
  .blog-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .blog-card__image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  
  .blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-card:hover .blog-card__image img {
    transform: scale(1.05);
  }
  
  .blog-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    color: #999;
  }
  
  .blog-card__meta {
    display: flex;
    gap: 16px;
    font-size: 0.85rem;
    margin-bottom: 12px;
  }
  
  .blog-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 12px;
  }
  
  .blog-card__excerpt {
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 16px;
  }
  
  .blog-card__read-more {
    font-size: 0.9rem;
    font-weight: 600;
  }
  
  .recent-blog__actions {
    text-align: center;
    margin-top: 40px;
  }
  
  .btn {
    display: inline-block;
    text-decoration: none;
    text-align: center;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid;
    background: transparent;
  }
  
  .btn--secondary:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .recent-blog__grid {
      grid-template-columns: 1fr !important;
    }
    
    .recent-blog__heading {
      font-size: 2rem;
    }
    
    .recent-blog__wrapper {
      padding: 0 16px;
    }
    
    .blog-card__meta {
      flex-direction: column;
      gap: 4px;
    }
  }
</style>


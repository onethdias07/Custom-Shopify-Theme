{% comment %}
  Testimonials Section
  Displays customer reviews and testimonials
{% endcomment %}

<section class="testimonials section"
         style="padding-top: {{ section.settings.section_padding_top }}px; 
                padding-bottom: {{ section.settings.section_padding_bottom }}px;
                background-color: {{ section.settings.section_bg_color }};">
  <div class="container">
    <div class="testimonials__wrapper">
      
      <!-- Section Header -->
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="testimonials__header" style="margin-bottom: {{ section.settings.header_spacing }}px;">
          {% if section.settings.eyebrow_text != blank %}
            <span class="testimonials__eyebrow" 
                  style="color: {{ section.settings.eyebrow_color }};">
              {{ section.settings.eyebrow_text }}
            </span>
          {% endif %}
          
          {% if section.settings.heading != blank %}
            <h2 class="testimonials__heading" 
                style="color: {{ section.settings.heading_color }};">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          
          {% if section.settings.subheading != blank %}
            <p class="testimonials__subheading" 
               style="color: {{ section.settings.subheading_color }};">
              {{ section.settings.subheading }}
            </p>
          {% endif %}
        </div>
      {% endif %}
      
      <!-- Testimonials Grid -->
      {% if section.blocks.size > 0 %}
        <div class="testimonials__grid" 
             style="grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
                    gap: {{ section.settings.grid_gap }}px;">
          {% for block in section.blocks %}
            <div class="testimonial-card" {{ block.shopify_attributes }}
                 style="padding: {{ section.settings.card_padding_top }}px {{ section.settings.card_padding_horizontal }}px {{ section.settings.card_padding_bottom }}px {{ section.settings.card_padding_horizontal }}px;
                        border-radius: {{ section.settings.card_border_radius }}px;
                        background-color: {{ section.settings.card_bg_color }};
                        {% if section.settings.card_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.1);{% endif %}
                        {% if section.settings.card_border %}border: 1px solid {{ section.settings.card_border_color }};{% endif %}">
              
              <!-- Rating Stars -->
              {% if section.settings.show_rating %}
                <div class="testimonial-card__rating">
                  {% assign rating = block.settings.rating | default: 5 %}
                  {% for i in (1..5) %}
                    {% if i <= rating %}
                      <span class="star star--filled" style="color: {{ section.settings.star_color }};">★</span>
                    {% else %}
                      <span class="star" style="color: {{ section.settings.star_empty_color }};">☆</span>
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}
              
              <!-- Quote Content -->
              {% if block.settings.quote != blank %}
                <blockquote class="testimonial-card__quote" 
                           style="color: {{ section.settings.quote_color }};">
                  "{{ block.settings.quote }}"
                </blockquote>
              {% endif %}
              
              <!-- Customer Info -->
              <div class="testimonial-card__customer">
                {% if block.settings.customer_avatar != blank %}
                  <div class="testimonial-card__avatar">
                    <img src="{{ block.settings.customer_avatar | image_url: width: 80 }}" 
                         alt="{{ block.settings.customer_name }}"
                         style="border-radius: {{ section.settings.avatar_border_radius }}px;">
                  </div>
                {% endif %}
                
                <div class="testimonial-card__info">
                  {% if block.settings.customer_name != blank %}
                    <h4 class="testimonial-card__name" 
                        style="color: {{ section.settings.name_color }};">
                      {{ block.settings.customer_name }}
                    </h4>
                  {% endif %}
                  
                  {% if block.settings.customer_title != blank %}
                    <p class="testimonial-card__title" 
                       style="color: {{ section.settings.title_color }};">
                      {{ block.settings.customer_title }}
                    </p>
                  {% endif %}
                  
                  {% if section.settings.show_verification and block.settings.verified %}
                    <span class="testimonial-card__verified" 
                          style="color: {{ section.settings.verification_color }};">
                      ✓ Verified Purchase
                    </span>
                  {% endif %}
                </div>
              </div>
              
            </div>
          {% endfor %}
        </div>
      {% endif %}
      
      <!-- View More Button -->
      {% if section.settings.show_view_more and section.settings.view_more_text != blank %}
        <div class="testimonials__actions">
          <a href="{{ section.settings.view_more_link | default: '#' }}" 
             class="btn btn--secondary"
             style="color: {{ section.settings.button_text_color }};
                    border-color: {{ section.settings.button_border_color }};
                    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
                    border-radius: {{ section.settings.button_border_radius }}px;">
            {{ section.settings.view_more_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

<style>
  .testimonials__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .testimonials__header {
    text-align: center;
  }
  
  .testimonials__eyebrow {
    display: block;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  
  .testimonials__heading {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }
  
  .testimonials__subheading {
    font-size: 1.1rem;
    line-height: 1.5;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .testimonials__grid {
    display: grid;
    margin-bottom: 40px;
  }
  
  .testimonial-card {
    display: flex;
    flex-direction: column;
    gap: 20px;
    transition: all 0.3s ease;
  }
  
  .testimonial-card:hover {
    transform: translateY(-4px);
  }
  
  .testimonial-card__rating {
    display: flex;
    gap: 4px;
    font-size: 1.2rem;
  }
  
  .testimonial-card__quote {
    font-size: 1.1rem;
    line-height: 1.6;
    font-style: italic;
    margin: 0;
    flex: 1;
  }
  
  .testimonial-card__customer {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: auto;
  }
  
  .testimonial-card__avatar img {
    width: 50px;
    height: 50px;
    object-fit: cover;
  }
  
  .testimonial-card__info {
    flex: 1;
  }
  
  .testimonial-card__name {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 4px 0;
    line-height: 1.3;
  }
  
  .testimonial-card__title {
    font-size: 0.9rem;
    margin: 0 0 4px 0;
    line-height: 1.3;
  }
  
  .testimonial-card__verified {
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .testimonials__actions {
    text-align: center;
    margin-top: 40px;
  }
  
  .btn {
    display: inline-block;
    text-decoration: none;
    text-align: center;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid;
    background: transparent;
  }
  
  .btn--secondary:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .testimonials__grid {
      grid-template-columns: 1fr !important;
    }
    
    .testimonials__heading {
      font-size: 2rem;
    }
    
    .testimonials__wrapper {
      padding: 0 16px;
    }
    
    .testimonial-card__customer {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 12px;
    }
  }
  
  @media (max-width: 480px) {
    .testimonial-card__quote {
      font-size: 1rem;
    }
  }
</style>


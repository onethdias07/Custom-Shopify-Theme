{% comment %}
  Features Section
  Displays key features, benefits, or USPs with icons
{% endcomment %}

<section class="features section"
         style="padding-top: {{ section.settings.section_padding_top }}px; 
                padding-bottom: {{ section.settings.section_padding_bottom }}px;
                background-color: {{ section.settings.section_bg_color }};">
  <div class="container">
    <div class="features__wrapper">
      
      <!-- Section Header -->
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="features__header" style="margin-bottom: {{ section.settings.header_spacing }}px;">
          {% if section.settings.eyebrow_text != blank %}
            <span class="features__eyebrow" 
                  style="color: {{ section.settings.eyebrow_color }};">
              {{ section.settings.eyebrow_text }}
            </span>
          {% endif %}
          
          {% if section.settings.heading != blank %}
            <h2 class="features__heading" 
                style="color: {{ section.settings.heading_color }};">
              {{ section.settings.heading }}
            </h2>
          {% endif %}
          
          {% if section.settings.subheading != blank %}
            <p class="features__subheading" 
               style="color: {{ section.settings.subheading_color }};">
              {{ section.settings.subheading }}
            </p>
          {% endif %}
        </div>
      {% endif %}
      
      <!-- Features Grid -->
      {% if section.blocks.size > 0 %}
        <div class="features__grid" 
             style="grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
                    gap: {{ section.settings.grid_gap }}px;">
          {% for block in section.blocks %}
            <div class="feature-card" {{ block.shopify_attributes }}
                 style="padding: {{ section.settings.card_padding_top }}px {{ section.settings.card_padding_horizontal }}px {{ section.settings.card_padding_bottom }}px {{ section.settings.card_padding_horizontal }}px;
                        border-radius: {{ section.settings.card_border_radius }}px;
                        background-color: {{ section.settings.card_bg_color }};
                        text-align: {{ section.settings.text_alignment }};
                        {% if section.settings.card_shadow %}box-shadow: 0 4px 20px rgba(0,0,0,0.1);{% endif %}
                        {% if section.settings.card_border %}border: 1px solid {{ section.settings.card_border_color }};{% endif %}">
              
              <!-- Feature Icon -->
              {% if block.settings.icon_type == 'image' and block.settings.icon_image != blank %}
                <div class="feature-card__icon">
                  <img src="{{ block.settings.icon_image | image_url: width: 80 }}" 
                       alt="{{ block.settings.title }}"
                       style="width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px; object-fit: contain;">
                </div>
              {% elsif block.settings.icon_type == 'svg' and block.settings.icon_svg != blank %}
                <div class="feature-card__icon" 
                     style="color: {{ section.settings.icon_color }}; width: {{ section.settings.icon_size }}px; height: {{ section.settings.icon_size }}px;">
                  {{ block.settings.icon_svg }}
                </div>
              {% elsif block.settings.icon_type == 'emoji' and block.settings.icon_emoji != blank %}
                <div class="feature-card__icon" 
                     style="font-size: {{ section.settings.icon_size }}px;">
                  {{ block.settings.icon_emoji }}
                </div>
              {% endif %}
              
              <!-- Feature Content -->
              <div class="feature-card__content">
                {% if block.settings.title != blank %}
                  <h3 class="feature-card__title" 
                      style="color: {{ section.settings.title_color }};">
                    {{ block.settings.title }}
                  </h3>
                {% endif %}
                
                {% if block.settings.description != blank %}
                  <p class="feature-card__description" 
                     style="color: {{ section.settings.description_color }};">
                    {{ block.settings.description }}
                  </p>
                {% endif %}
                
                {% if block.settings.link_text != blank %}
                  <a href="{{ block.settings.link_url | default: '#' }}" 
                     class="feature-card__link"
                     style="color: {{ section.settings.link_color }};">
                    {{ block.settings.link_text }}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" style="margin-left: 8px; vertical-align: middle;">
                      <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
              
            </div>
          {% endfor %}
        </div>
      {% endif %}
      
      <!-- Action Button -->
      {% if section.settings.show_action_button and section.settings.action_button_text != blank %}
        <div class="features__actions">
          <a href="{{ section.settings.action_button_link | default: '#' }}" 
             class="btn btn--primary"
             style="background-color: {{ section.settings.button_bg_color }};
                    color: {{ section.settings.button_text_color }};
                    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
                    border-radius: {{ section.settings.button_border_radius }}px;">
            {{ section.settings.action_button_text }}
          </a>
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

<style>
  .features__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .features__header {
    text-align: center;
  }
  
  .features__eyebrow {
    display: block;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  
  .features__heading {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
  }
  
  .features__subheading {
    font-size: 1.1rem;
    line-height: 1.5;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .features__grid {
    display: grid;
    margin-bottom: 40px;
  }
  
  .feature-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-4px);
  }
  
  .feature-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .feature-card__icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
  
  .feature-card__content {
    flex: 1;
  }
  
  .feature-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 12px;
  }
  
  .feature-card__description {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 16px;
  }
  
  .feature-card__link {
    display: inline-flex;
    align-items: center;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .feature-card__link:hover {
    opacity: 0.8;
  }
  
  .features__actions {
    text-align: center;
    margin-top: 40px;
  }
  
  .btn {
    display: inline-block;
    text-decoration: none;
    text-align: center;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }
  
  .btn--primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .features__grid {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 20px !important;
    }
    
    .features__heading {
      font-size: 2rem;
    }
    
    .features__wrapper {
      padding: 0 16px;
    }
    
    .feature-card {
      gap: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .features__grid {
      grid-template-columns: 1fr !important;
    }
    
    .feature-card__title {
      font-size: 1.1rem;
    }
  }
</style>


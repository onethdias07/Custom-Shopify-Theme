<style>
  .header-cart-trigger {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    position: relative;
  }
  
  .header-cart-trigger:hover {
    transform: scale(1.05);
  }
  
  .header-cart-trigger:active {
    transform: scale(0.95);
  }
  
  .header-cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #ff4444;
    color: white;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    min-width: 18px;
    padding: 2px;
  }

  /* Account Dropdown Styles */
  .account-dropdown {
    position: relative;
  }

  .account-trigger {
    display: flex !important;
    align-items: center;
    gap: 4px;
    background: none !important;
    border: none !important;
    padding: 8px !important;
    cursor: pointer;
  }

  .account-login {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .account-text {
    font-size: 14px;
    font-weight: 500;
  }

  .dropdown-arrow {
    transition: transform 0.2s ease;
  }

  .account-trigger:hover .dropdown-arrow,
  .account-trigger.active .dropdown-arrow {
    transform: rotate(180deg);
  }

  .account-menu {
    position: absolute;
    top: 100%;
    right: 0;
    background: white;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .account-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .account-info {
    padding: 16px;
    border-bottom: 1px solid #e8e8e8;
  }

  .customer-name {
    font-weight: 600;
    color: var(--color-primary, #333);
    margin-bottom: 4px;
  }

  .customer-email {
    font-size: 12px;
    color: var(--color-secondary, #666);
  }

  .account-links {
    padding: 8px 0;
  }

  .account-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: var(--color-primary, #333);
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .account-link:hover {
    background-color: #f8f9fa;
    text-decoration: none;
  }

  .account-link.logout {
    color: #dc3545;
  }

  .account-link.logout:hover {
    background-color: #fff5f5;
  }

  @media (max-width: 768px) {
    .account-text {
      display: none;
    }
    
    .account-menu {
      right: -20px;
      min-width: 180px;
    }
  }
</style>

<header class="header" role="banner">
  <div class="header-container">
    <!-- Logo -->
    <div class="header-logo">
      <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
        {% if shop.brand.logo %}
          <img src="{{ shop.brand.logo | img_url: '120x' }}" alt="{{ shop.name }}" width="{{ shop.brand.logo.width }}" height="{{ shop.brand.logo.height }}">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </a>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="header-mobile-toggle" aria-label="Toggle navigation" onclick="toggleMobileNav()">
      <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Navigation -->
    <nav class="header-nav" role="navigation" aria-label="Main navigation">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li>
            <a href="{{ link.url }}"{% if link.current %} aria-current="page"{% endif %}>
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Actions -->
    <div class="header-actions">
      <!-- Search -->
      <div class="header-search">
        <form class="header-search-form" action="{{ routes.search_url }}" method="get">
          <input 
            class="header-search-input" 
            type="search" 
            name="q" 
            placeholder="Search products..." 
            autocomplete="off"
            aria-label="Search products">
          <button class="header-search-button" type="submit" aria-label="Search">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Account -->
      {% if shop.customer_accounts_enabled %}
        {% if customer %}
          <div class="account-dropdown">
            <button class="header-icon-link account-trigger" aria-label="My Account" onclick="toggleAccountMenu()">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <svg class="dropdown-arrow" width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="account-menu" id="account-menu">
              <div class="account-info">
                <div class="customer-name">{{ customer.first_name | default: 'Account' }}</div>
                <div class="customer-email">{{ customer.email }}</div>
              </div>
              <div class="account-links">
                <a href="{{ routes.account_url }}" class="account-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Dashboard
                </a>
                <a href="{{ routes.account_url }}#account-orders" class="account-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                    <line x1="9" y1="9" x2="15" y2="9" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Orders
                </a>
                <a href="{{ routes.account_logout_url }}" class="account-link logout">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke="currentColor" stroke-width="2"/>
                    <polyline points="16,17 21,12 16,7" stroke="currentColor" stroke-width="2"/>
                    <line x1="21" y1="12" x2="9" y2="12" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  Sign Out
                </a>
              </div>
            </div>
          </div>
        {% else %}
          <a href="{{ routes.account_login_url }}" class="header-icon-link account-login" aria-label="Sign In">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="account-text">Sign In</span>
          </a>
        {% endif %}
      {% endif %}

      <!-- Cart -->
      <button onclick="openSidebar()" class="header-icon-link header-cart-trigger" aria-label="Open cart ({{ cart.item_count }} items)">
        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m1.6 10L5 3H3m4 10a2 2 0 11-4 0 2 2 0 014 0zm10 0a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="header-cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </button>
    </div>
  </div>
</header>

<script>
  function toggleMobileNav() {
    const nav = document.querySelector('.header-nav');
    nav.classList.toggle('is-open');
    
    // Add scroll lock when menu is open
    if (nav.classList.contains('is-open')) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  }

  function toggleAccountMenu() {
    const accountMenu = document.getElementById('account-menu');
    const accountTrigger = document.querySelector('.account-trigger');
    
    accountMenu.classList.toggle('show');
    accountTrigger.classList.toggle('active');
  }

  // Close mobile nav and account menu when clicking outside
  document.addEventListener('click', function(event) {
    const nav = document.querySelector('.header-nav');
    const toggle = document.querySelector('.header-mobile-toggle');
    const accountDropdown = document.querySelector('.account-dropdown');
    const accountMenu = document.getElementById('account-menu');
    const accountTrigger = document.querySelector('.account-trigger');
    
    // Close mobile nav
    if (nav && toggle && !nav.contains(event.target) && !toggle.contains(event.target)) {
      nav.classList.remove('is-open');
      document.body.style.overflow = '';
    }
    
    // Close account menu
    if (accountDropdown && accountMenu && accountTrigger && 
        !accountDropdown.contains(event.target)) {
      accountMenu.classList.remove('show');
      accountTrigger.classList.remove('active');
    }
  });

  // Close mobile nav and account menu when window is resized to desktop
  window.addEventListener('resize', function() {
    if (window.innerWidth > 768) {
      const nav = document.querySelector('.header-nav');
      const accountMenu = document.getElementById('account-menu');
      const accountTrigger = document.querySelector('.account-trigger');
      
      if (nav) {
        nav.classList.remove('is-open');
        document.body.style.overflow = '';
      }
      
      if (accountMenu && accountTrigger) {
        accountMenu.classList.remove('show');
        accountTrigger.classList.remove('active');
      }
    }
  });

  // Add header scroll effect
  window.addEventListener('scroll', function() {
    const header = document.querySelector('.header');
    if (window.scrollY > 100) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

{% schema %}

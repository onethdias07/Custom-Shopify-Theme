    {
      "type": "range",
      "id": "custom_height",
      "label": "Custom Height",
      "min": 200,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 600,
      "visible_if": "{{ section.settings.section_height == 'custom' }}"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}